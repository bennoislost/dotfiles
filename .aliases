#!/bin/bash

# ~/.aliases - Some sweet shortcuts...

#######################################################
# Directory Browsing
#######################################################

# Fast navigation...
alias ..="cd  .."

# List current directories @TODO: pass arguments?
alias dir="ls -lah | grep '^d'"


#######################################################
# Git SCM
#######################################################

# Sexy Status
alias gstatus='git status -s'


#######################################################
# Networking
#######################################################

# fetch remote ip
alias remoteip="dig +short myip.opendns.com @resolver1.opendns.com"

# flush dns cache
alias flushdns="dscacheutil -flushcache"

# One of @janmoesen’s ProTip™s
# Perform basic UA requests from terminal
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
	alias "$method"="lwp-request -m '$method'"
done

#######################################################
# Applications
#######################################################

# Launch iOS Simulator
alias ios="open -a /Applications/Xcode.app/Contents/Developer/Platforms/iPhoneSimulator.platform/Developer/Applications/iPhone\ Simulator.app"

# Vagrant
alias vag="vagrant"

#######################################################
# OSX
#######################################################

# Show/Hide the desktop... always useful
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"

# Remove data in Trash
alias trashrm="sudo rm -rfv ~/.Trash"
