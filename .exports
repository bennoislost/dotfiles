# Homebrew cask options
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# nice one @bagwaa
function parse_git_branch () {
	git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

