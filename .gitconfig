[user]
    name = Ben McManus
    email = user@server.loc
[alias]
    # Amend the currently staged files to the latest commit
    amend = commit --amend --reuse-message=HEAD

    # Shorthand branch
    br = branch

    # Verbose branch output
    branches = branch -a

    # Commit
    c = commit

    # Checkout
    co = checkout

    # Cleanup
    cleanup = !git remote prune origin && git gc --aggressive && git clean -dfx && git stash clear

    # show files that have changed between two branches (git dbr master..branch)
    dbr = diff --name-status

    # Diff cached
    dc = diff --cached
[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix
[help]
    # Automatically correct and execute mistyped commands
    autocorrect = 1
[color]
    ui = auto
[diff]
    tool = pstorm
[difftool]
    prompt = false
[difftool.pstorm]
    cmd = /usr/local/bin/pstorm diff "$LOCAL" "$REMOTE"
[merge]
    tool = pstorm
[mergetool.pstorm]
    cmd = /usr/local/bin/pstorm merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"

